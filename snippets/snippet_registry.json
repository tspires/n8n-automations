{
  "schema_version": "2.0",
  "output_schema": {
    "pattern": "{check}_passed, {check}_score, {check}_issues, {check}_data",
    "description": "All snippets follow consistent naming: passed (bool), score (0-100), issues (string[]), data (object)"
  },
  "snippets": [
    {
      "id": "prospect_validator",
      "name": "Prospect Validator (All-in-One)",
      "description": "Combines all checks in single pass. Outputs health, legitimacy, seo, contactability, maturity + overall.",
      "file": "prospect_validator.py",
      "input_fields": ["url", "website", "company_url", "domain"],
      "output_fields": ["overall_passed", "overall_score", "health_*", "legitimacy_*", "seo_*", "contactability_*", "maturity_*"],
      "pass_field": "overall_passed",
      "order": 0,
      "recommended": true
    },
    {
      "id": "url_health_check",
      "name": "URL Health Check",
      "description": "Quick check if website is accessible and responsive",
      "file": "url_health_check.py",
      "input_fields": ["url", "website", "company_url", "domain"],
      "output_fields": ["health_passed", "health_score", "health_issues", "health_data"],
      "pass_field": "health_passed",
      "order": 1
    },
    {
      "id": "business_legitimacy",
      "name": "Business Legitimacy Check",
      "description": "Detects parked domains, placeholder pages, under construction sites",
      "file": "business_legitimacy.py",
      "input_fields": ["url", "url_checked", "website", "domain"],
      "output_fields": ["legitimacy_passed", "legitimacy_score", "legitimacy_issues", "legitimacy_data"],
      "pass_field": "legitimacy_passed",
      "order": 2
    },
    {
      "id": "company_maturity",
      "name": "Company Maturity Check",
      "description": "Analyzes domain age, SSL, MX records, and technology stack",
      "file": "company_maturity.py",
      "input_fields": ["url", "url_checked", "website", "domain"],
      "output_fields": ["maturity_passed", "maturity_score", "maturity_issues", "maturity_data"],
      "pass_field": "maturity_passed",
      "order": 3
    },
    {
      "id": "contactability",
      "name": "Contactability Check",
      "description": "Extracts emails, phone numbers, and social media links",
      "file": "contactability.py",
      "input_fields": ["url", "url_checked", "website", "domain"],
      "output_fields": ["contactability_passed", "contactability_score", "contactability_issues", "contactability_data"],
      "pass_field": "contactability_passed",
      "order": 4
    },
    {
      "id": "site_seo_check",
      "name": "Site SEO Check",
      "description": "Analyzes on-page SEO factors and performance",
      "file": "site_seo_check.py",
      "input_fields": ["url", "url_checked", "website", "domain"],
      "output_fields": ["seo_passed", "seo_score", "seo_issues", "seo_data"],
      "pass_field": "seo_passed",
      "order": 5
    }
  ]
}
